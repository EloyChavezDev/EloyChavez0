<script>
    const manualContributions = [
      5, 10, 0, 7, 25, 30, 15, 0, 0, 3, 8, 12, 0, 0, 35, 28, 5,
    ];

    const calendarElement = document.getElementById('calendar');
    const daysInYear = 365;

    for (let i = 0; i < daysInYear; i++) {
      const day = document.createElement('div');
      day.classList.add('day');

      const contributions = manualContributions[i] || 0;

      if (contributions > 0) {
        if (contributions < 10) {
          day.style.backgroundColor = "#9be9a8"; 
        } else if (contributions < 20) {
          day.style.backgroundColor = "#40c463"; 
        } else if (contributions < 30) {
          day.style.backgroundColor = "#30a14e"; 
        } else {
          day.style.backgroundColor = "#216e39"; 
        }
      }

      calendarElement.appendChild(day);
    }
  </script>
