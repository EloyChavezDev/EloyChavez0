---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---
<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">👋🏻 Hola</div>
    <div class="text-5xl font-bold">Soy Eloy Chavez</div>
    <div class="text-3xl py-3 font-bold">💻 Tecnólogo apasionado | Docente & Desarrollador Web</div>
    <div class="py-2">
      <text class="text-lg">
        <p>Fusiono educación, tecnología y creatividad para transformar ideas en soluciones digitales con impacto.</p>
        </br>
        <ul>
          <p>Me especializo en:</p>
          <li><strong>Desarrollo web</strong> que potencia proyectos educativos y empresariales.</li>
          <li><strong>Formación tecnológica</strong>, guiando a futuros profesionales en el mundo digital.</li>
          <li><strong>Ciberseguridad y marca personal</strong>, ayudando a construir presencia digital segura y auténtica.</li>
        </ul>
        </br>
        <p><em>"La tecnología es mi herramienta para democratizar el conocimiento y resolver desafíos reales."</em></p>
        <p><a href="https://eloychavez.dev/social/">👉 ¿Listo para innovar? <strong>Hablemos.</strong></a></p>
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://www.youtube.com/@eloychavezdev" target="_blank">❤ Youtube</a>
      <a href="https://tips.eloychavez.dev/" target="_blank" class="btn btn-outline ml-5">✍🏻 Tips de Tecnología</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-2">Ultimos proyectos {"</>"}</div>
  </div>
  <HorizontalCard
    title="Landing Boda Ines&Pedro"
    img="/InesyPedro.png"
    desc="Landing page para boda con enfoque mobile-first: diseño limpio y responsive que priorizó la experiencia de usuario en smartphones, integrando detalles clave (fecha, ubicación, RSVP) con interacciones intuitivas y estilo visual elegante. Desarrollado con HTML5, CSS3 y JavaScript para garantizar rapidez y accesibilidad."
    url="https://boda-inesypedro.netlify.app/"
    badge="2024"
  />
  <HorizontalCard
    title="Landing XV años Zoe"
    img="/XV.png"
    desc="El proyecto consiste en desarrollar una landing page interactiva y visualmente atractiva para celebraciones de XV años, combinando la creatividad y habilidades técnicas de dos programadores que llevamos a cabo este proyecto."
    url="https://nonamoes.github.io/zoe/"
    badge="2024"
  />
  <HorizontalCard
  title="UCADocs"
  img="/UCADocs.png"
  desc="El proyecto consiste en desarrollar un sistema de gestión documental para centralizar y organizar la documentación del departamento de tecnologías de la Universidad Continente Americano"
  url="https://ucadocs.eloychavez.dev/"
  badge="2024"
  />
  <div class="divider my-0"></div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">✍🏻 Ultimos Post</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
          tags={post.data.tags}
        />
        <div class="divider my-0" />
      </>
    ))
  }
<div class="divider my-0"></div>
<div class="mt-10">
  <div class="text-3xl w-full font-bold mb-5">Contribuciones</div>
  <img src="https://ghchart.rshah.org/eloychavezdev" alt="GitHub Contributions Chart" />
</div>
</BaseLayout>
